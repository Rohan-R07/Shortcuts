<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="compose"
        android:shortcutShortLabel="@string/short_name"
        android:shortcutLongLabel="@string/short_long_name"
        android:icon="?android:attr/actionModeCutDrawable"
        android:shortcutDisabledMessage="@string/short_long_name">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.practice.shortcuts"
            android:targetClass="com.practice.shortcuts.MainActivity"/>
<!--        <categories android:name="android.shortcut.conversation" />-->
<!--        <capability-binding android:key="actions.intent.CREATE_MESSAGE" />-->
    </shortcut>

    <shortcut
        android:shortcutId="chat"
        android:shortcutShortLabel="@string/chat_name"
        android:shortcutLongLabel="@string/chat_long_name"
        android:icon="@android:drawable/ic_btn_speak_now"
        android:shortcutDisabledMessage="@string/short_long_name">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.practice.shortcuts"
            android:targetClass="com.practice.shortcuts.ChatActivity"/>
<!--        <categories android:name="android.shortcut.conversation" />-->

    </shortcut>

</shortcuts>